import greenfoot.*;  // (World, Actor, GreenfootImage, Greenfoot and MouseInfo)

/**
 * This is a flower. Catch it with the bucket!
 */
public class Bucket extends Actor
{
    /**
     * Act: move up and down when cursor keys are pressed.
     */
    public void act() 
    {
        checkKeyPress();
        checkCollision();
    }
    
    /**
     * Check whether a keyboard key has been pressed and react if it has.
     */
    private void checkKeyPress()
    {
        if (Greenfoot.isKeyDown("up")) 
        {
            setLocation(getX(), getY()-8);
        }
        
        if (Greenfoot.isKeyDown("down")) 
        {
            setLocation(getX(), getY()+8);
        }
        
        if (Greenfoot.isKeyDown("right")) 
        {
            setLocation(getX()+4, getY());
        }
        
        if (Greenfoot.isKeyDown("left")) 
        {
            setLocation(getX()-4, getY());
        }
    }
    
    /**
     * Check whether we are touching a leaf or bee. Remove flower.
     * Game over if we hit a bee.
     */
    private void checkCollision()
    {
        if (isTouching(Flower.class)) 
        {
            Greenfoot.playSound("slurp.wav");
            removeTouching(Flower.class);
            FlowerWorld flowerWorld = (FlowerWorld)getWorld();
            flowerWorld.addScore(20);
        }

        if (isTouching(Bee.class)) 
        {
            removeTouching(Bee.class);
            FlowerWorld flowerWorld = (FlowerWorld)getWorld();
            flowerWorld.addScore(-100);            
        }
    }
}
